
<%= form_for @doctor do |f| %>
  <strong><%= f.label :first_name %></strong>
  <%= f.text_field :first_name %>
  <br><br>
  <strong><%= f.label :last_name %></strong>
  <%= f.text_field :last_name %>
  <br><br>
  <strong><%= f.label :biography %></strong>
  <%= f.text_area :biography, size: "30x4" %>
  <br><br>
  <strong><%= f.label :gender_name %></strong>
  <%= f.radio_button(:gender_name, "male") %>
  <%= f.label(:gender_name, "male") %>
  <%= f.radio_button(:gender_name, "female") %>
  <%= f.label(:gender_name, "female") %>
  <br><br>
  <strong><%= f.label :specialty %></strong>
  <%= f.text_field :specialty %>
  <br><br>
  <%= f.submit %><br><br>
<% end %>

 
<%= link_to 'Return to Home', root_path %>