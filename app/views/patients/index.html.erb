 <p id="notice"><%= notice %></p>
<h1>Patients</h1>
<br>
<%= link_to "Create New Patient Data", new_patient_path %>
<br>
<ul>
<% @patients.each do |patient| %>
  <li>
    <strong>Patient Name:</strong>
    <%= link_to patient.last_name + ", " + patient.first_name, patient_path(patient) %>
    <br>
    <strong>DOB:</strong>
    <%= patient.date_of_birth %>
    <br>
    <strong>Description:</strong>
    <%= patient.description %>
    <br>
    <strong>Gender:</strong>
    <%= patient.gender %>
    <br>
    <strong>Blood Type:</strong>
    <%= patient.blood_type %>
    <br><br>
    <%= link_to "Edit Patient", edit_patient_path(patient) %>
    |
    <%= link_to "Delete Patient", patient_path(patient), method: :delete %>
  </li>
  <br>
<% end %>
</ul>
<%= link_to "Return to Home", root_path %>